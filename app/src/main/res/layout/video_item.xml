<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="video"
            type="com.example.madam.data.db.repositories.model.VideoItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/video_image_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@{video.video_src}"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@{video.user_image_src}"
            app:civ_border_color="@color/primary_dark"
            app:civ_border_width="3dp"
            app:civ_shadow="false"
            app:civ_shadow_color="@color/primary"
            app:civ_shadow_radius="2dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="615dp"
            />

        <TextView
            android:id="@+id/user_name"
            style="@style/H2RobotoFont"
            android:layout_width="281dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:textSize="21sp"
            android:text="@{video.user_name}"
            android:textColor="@color/divider"
            app:layout_constraintBottom_toBottomOf="@id/user_image"
            app:layout_constraintStart_toEndOf="@id/user_image" />

        <TextView
            android:id="@+id/video_creation_date"
            style="@style/H2RobotoFont"
            android:layout_width="215dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="36dp"
            android:textSize="14sp"
            android:text="@{video.creation_date}"
            android:textColor="@color/divider"
            app:layout_constraintBottom_toBottomOf="@+id/user_name"
            app:layout_constraintStart_toEndOf="@id/user_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>