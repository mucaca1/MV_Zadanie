<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_graph" app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.tiktok.ui.fragments.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_home_to_post"
            app:destination="@id/postFragment" />
    </fragment>

    <fragment
        android:id="@+id/postFragment"
        android:name="com.example.tiktok.ui.fragments.PostFragment"
        android:label="PostFragment">
        <action
            android:id="@+id/action_post_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.tiktok.ui.fragments.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_login_to_registration"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.tiktok.ui.fragments.RegistrationFragment"
        android:label="RegistrationFragment">
        <action
            android:id="@+id/action_registration_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registration_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.tiktok.ui.fragments.ProfileFragment"
        android:label="ProfileFragment">
        <action
            android:id="@+id/action_profile_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profile_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_profile_to_changePassword"
            app:destination="@id/changePasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.tiktok.ui.fragments.ChangePasswordFragment"
        android:label="ChangePasswordFragment">
        <action
            android:id="@+id/action_changePassword_to_profile"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/videoPermissionsFragment"
        android:name="com.example.tiktok.ui.fragments.VideoPermissionsFragment"
        android:label="VideoPermissionsFragment">
        <action
            android:id="@+id/action_permissions_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_permissions_to_record"
            app:destination="@id/videoRecordFragment" />
    </fragment>

    <fragment
        android:id="@+id/videoRecordFragment"
        android:name="com.example.tiktok.ui.fragments.VideoRecordFragment"
        android:label="VideoRecordFragment">
        <action
            android:id="@+id/action_record_to_home"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>